<section
  class="bg-general bg-cover bg-center h-auto flex gap-5 text-secundary-light w-full"
>
      <!-- Main Content -->
      <div class="flex flex-col flex-1 overflow-hidden">
        <!-- Top Navigation -->
        <header class="bg-main-black shadow-lg">
          <div class="flex items-center h-16 px-6">
            <div class="flex space-x-4">
              <button onclick="window.location.href='/add-user.html'" class="flex gap-2 items-center px-4 py-2 border border-main-yellow bg-main-yellow text-main-black rounded-lg hover:bg-transparent hover:text-secundary-light transition-colors font-semibold">
                <i class="fa-solid fa-user-plus text-xl"></i>
                Crear nuevo usuario
              </button>
            </div>
          </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto p-6">
          <div class="max-w-7xl mx-auto">
            <!-- Search and Filter Section -->
            <div class="mb-6 flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
              <div class="flex-1">
                <div class="relative">
                  <input type="text" placeholder="Search users..." class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-500">
                  <i data-feather="search" class="absolute right-3 top-2.5 h-5 w-5 text-gray-400"></i>
                </div>
              </div>
              <div class="flex space-x-4">
                <select id="sortBy" class="px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-white focus:outline-none focus:border-blue-500">
                  <option value="name">Sort by Name</option>
                  <option value="email">Sort by Email</option>
                  <option value="date">Sort by Join Date</option>
                </select>
                <button id="sortOrder" class="p-2 bg-gray-800 border border-gray-700 rounded-lg text-white hover:bg-gray-700">
                  <i data-feather="arrow-up" class="h-5 w-5"></i>
                </button>
              </div>
            </div>

            <!-- Users Table -->
            <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead class="bg-gray-900">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">User</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Contact</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
