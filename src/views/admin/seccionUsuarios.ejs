  <script>

    // Sort functionality


    // Delete user functionality
    let userToDelete = null;

    function editUser(userId) {
      window.location.href = `/edit-user.html?id=${userId}`;
    }

    function deleteUser(userId) {
      userToDelete = userId;
      document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.add('hidden');
      userToDelete = null;
    }

    function confirmDelete() {
      if (userToDelete) {
        // Implement delete logic here
        console.log(`Deleting user ${userToDelete}`);
        closeDeleteModal();
      }
    }

    // Close modal when clicking outside
    document.getElementById('deleteModal').addEventListener('click', (e) => {
      if (e.target === e.currentTarget) {
        closeDeleteModal();
      }
    });

    //Fetching and populating the table
    document.addEventListener('DOMContentLoaded', async () => {
      const URL_USUARIOS = '/api/v1/usuarios';
      const tableBody = document.getElementById('tableBody');

      try {

        const res = await fetch(URL_USUARIOS);
        if (!res.ok) {
          throw new Error('Error al obtener los datos de los usuarios');
        }

        const users = await res.json();
        tableBody.innerHTML = "";

        users.forEach(user => {
          const userRow = `<tr class="hover:bg-gray-700">
                            <td class="px-6 py-4 whitespace-nowrap">
                              <div class="flex items-center">
                                <div class="ml-4">
                                  <div class="text-sm font-medium">${user.Nombres}</div>
                                  <div class="text-sm text-gray-400">Premium</div>
                                </div>
                              </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                              <div class="text-sm">${user.CorreoElectronico}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Activo
                              </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                              Vehicles
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                              ${user.Telefono}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                              <div class="flex justify-end space-x-4">
                              <button onclick="editUser('1')" class="text-main-yellow hover:text-secundary-light">
                              <i class="fa-solid fa-pen-to-square text-2xl"></i>
                              </button>
                              <button onclick="deleteUser('1')" class="text-red-400 hover:text-red-300">
                              <i class="fa-solid fa-trash text-2xl"></i>
                              </button>
                              </div>
                            </td>
                          </tr>`;

          tableBody.insertAdjacentHTML('beforeend', userRow);
        });
      } catch (err) {
        tableBody.innerHTML = `<tr><td colspan="6" class="text-center py-4 text-red-500">Error al cargar los usuarios</td></tr>`;
      }
    })
  </script>
